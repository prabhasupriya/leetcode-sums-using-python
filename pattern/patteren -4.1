#include<stdio.h>
int main(){
    int n;
    scanf("%d" , &n);

    for (int i =0;i <n;i++){
        if(i%2 ==0){
            for(int j=0;j<n;j++){
                printf("%d " , 0);
            }
            printf("\n");
        }
        else{
            for(int j =0;j<n;j++){
                printf("%d ", 1);
            }
            printf("\n");
        }
    }
}
